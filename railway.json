{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "composer install --no-dev"
    },
    "deploy": {
        "startCommand": "php artisan migrate --force && php artisan storage:link",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
